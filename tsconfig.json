{
    "compilerOptions": {
        "module": "system",
        "lib": [ "es2015", "dom" ],
        "target": "es2017",
        "outFile": "index.js",
        "removeComments": true,

        "noImplicitAny": true,
        "inlineSourceMap": true,
        "noEmitOnError": false,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "*.ts"
    ]
}
